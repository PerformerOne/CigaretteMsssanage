<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/tfff5f5f5">

    <include layout="@layout/include_title"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginLeft="@dimen/margin_3_dp"
        android:layout_marginRight="@dimen/margin_13_dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:orientation="horizontal">
            <TextView
                android:layout_width="0dp"
                android:layout_weight="0.5"
                android:layout_height="wrap_content"
                android:text="原密码"
                android:textSize="@dimen/text_20_sp"
                android:textColor="@color/t201D1C"
                android:includeFontPadding="false"/>

            <EditText
                android:id="@+id/et_pwd_old"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:background="@null"
                android:layout_height="wrap_content"
                android:hint="请输入原密码"
                android:textColorHint="@color/tB2B2B2"
                android:textColor="@color/t201D1C"
                android:textSize="@dimen/text_15_sp"
                android:inputType="numberPassword"/>

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/tC3C3C3"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:orientation="horizontal">
            <TextView
                android:layout_width="0dp"
                android:layout_weight="0.5"
                android:layout_height="wrap_content"
                android:text="新密码"
                android:textSize="@dimen/text_20_sp"
                android:textColor="@color/t201D1C"
                android:includeFontPadding="false"/>

            <EditText
                android:id="@+id/et_pwd_new"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:background="@null"
                android:layout_height="wrap_content"
                android:hint="请输入新密码"
                android:textColorHint="@color/tB2B2B2"
                android:textColor="@color/t201D1C"
                android:textSize="@dimen/text_15_sp"
                android:inputType="numberPassword"/>

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/tC3C3C3"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:orientation="horizontal">
            <TextView
                android:layout_width="0dp"
                android:layout_weight="0.5"
                android:layout_height="wrap_content"
                android:text="确认新密码"
                android:textSize="@dimen/text_20_sp"
                android:textColor="@color/t201D1C"
                android:includeFontPadding="false"/>

            <EditText
                android:id="@+id/et_pwd_again"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:background="@null"
                android:layout_height="wrap_content"
                android:hint="请再次确认新密码"
                android:textColorHint="@color/tB2B2B2"
                android:textColor="@color/t201D1C"
                android:textSize="@dimen/text_15_sp"
                android:inputType="numberPassword"/>

        </LinearLayout>
    </LinearLayout>

</LinearLayout>