<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity"
    android:background="@color/tfff5f5f5">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@mipmap/icon_mine_bg"
        android:orientation="vertical"
        android:gravity="center_horizontal">

        <ImageView
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:layout_marginTop="@dimen/margin_50_dp"
            android:src="@mipmap/icon_login_logo"
            android:scaleType="fitXY"/>

        <TextView
            android:id="@+id/tv_mine_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="李明晓"
            android:layout_marginTop="@dimen/margin_10_dp"
            android:includeFontPadding="false"
            android:textColor="@color/tffffff"
            android:textSize="@dimen/text_15_sp"/>

        <TextView
            android:id="@+id/tv_mine_phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="18935420156"
            android:layout_marginTop="@dimen/margin_10_dp"
            android:includeFontPadding="false"
            android:textColor="@color/tffffff"
            android:textSize="@dimen/text_15_sp"/>
    </LinearLayout>
    
    <LinearLayout
        android:id="@+id/lay_mine_setting"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginTop="@dimen/margin_10_dp"
        android:background="@color/tffffff"
        android:orientation="horizontal"
        android:gravity="center_vertical">


        <ImageView
            android:layout_width="@dimen/margin_25_dp"
            android:layout_height="@dimen/margin_25_dp"
            android:layout_marginLeft="@dimen/margin_25_dp"
            android:scaleType="fitXY"
            android:src="@mipmap/icon_mine_repass"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="修改密码"
            android:layout_marginLeft="@dimen/margin_15_dp"
            android:textSize="@dimen/text_15_sp"
            android:textColor="@color/t363838"
            android:includeFontPadding="false"/>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="right"
            android:layout_marginRight="@dimen/margin_25_dp">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/icon_black_right"/>
        </LinearLayout>

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="bottom"
        android:layout_marginBottom="@dimen/margin_20_dp">
        <LinearLayout
            android:id="@+id/lay_mine_logout"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginTop="@dimen/margin_10_dp"
            android:background="@color/tffffff"
            android:orientation="horizontal"
            android:gravity="center">


            <ImageView
                android:layout_width="@dimen/margin_25_dp"
                android:layout_height="@dimen/margin_25_dp"
                android:layout_marginLeft="@dimen/margin_25_dp"
                android:scaleType="fitXY"
                android:src="@mipmap/icon_mine_exit"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="注销"
                android:layout_marginLeft="@dimen/margin_15_dp"
                android:textSize="@dimen/text_18_sp"
                android:textColor="@color/t201D1C"
                android:includeFontPadding="false"/>

        </LinearLayout>
    </LinearLayout>

</LinearLayout>