<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/tffffff">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="@dimen/margin_10_dp"
        android:gravity="center_vertical">

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@mipmap/icon_mess_info"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:id="@+id/tv_mess_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_10_dp"
                android:text="小希"
                android:textColor="@color/t201D1C"
                android:textSize="@dimen/text_15_sp"
                android:includeFontPadding="false"/>
            <TextView
                android:id="@+id/tv_mess_info"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_10_dp"
                android:singleLine="true"
                android:ellipsize="end"
                android:text="配送员李莉将商户宋凡(61012548215)的配送员李莉将商户宋凡(61012548215)的"
                android:layout_marginTop="@dimen/margin_5_dp"
                android:textColor="@color/tC3C3C3"
                android:textSize="@dimen/text_12_sp"
                android:includeFontPadding="false"/>
        </LinearLayout>


    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginLeft="@dimen/margin_10_dp"
        android:layout_marginRight="@dimen/margin_10_dp"
        android:background="@color/tffeeeeee"/>

</LinearLayout>