<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="120dp"
    android:layout_height="match_parent"
    android:background="@color/tffffff"
    android:gravity="center_vertical|center_horizontal">

    <TextView
        android:id="@+id/tv_return_detail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:textColor="@color/t808080"
        android:text="11111111"
        android:textSize="@dimen/text_12_sp"
        android:includeFontPadding="false"/>

    <TextView
        android:id="@+id/tv_return_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/t413D3B"
        android:textSize="@dimen/text_18_sp"
        android:includeFontPadding="false"
        android:text="22222222"
        android:paddingTop="@dimen/margin_5_dp"/>

    <TextView
        android:id="@+id/tv_return_distance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/t413D3B"
        android:textSize="@dimen/text_15_sp"
        android:includeFontPadding="false"
        android:text="3333333333"
        android:paddingTop="@dimen/margin_5_dp"/>
</LinearLayout>